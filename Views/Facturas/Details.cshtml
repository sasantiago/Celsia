@model celsia.Models.Facturacion

@{
    ViewData["Title"] = "Detalles de la Factura";
}

<h1>Detalles de la Factura</h1>

<div>
    <h4>Factura</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">NumeroFactura</dt>
        <dd class="col-sm-10">@Model.NumeroFactura</dd>

        <dt class="col-sm-2">MontoFacturado</dt>
        <dd class="col-sm-10">@Model.MontoFacturado</dd>

        <dt class="col-sm-2">MontoPagado</dt>
        <dd class="col-sm-10">@Model.MontoPagado</dd>

        <dt class="col-sm-2">PeriodoFactura</dt>
        <dd class="col-sm-10">@Model.PeriodoFactura</dd>
    </dl>
    <a asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
</div>
