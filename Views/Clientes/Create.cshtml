@model celsia.Models.Cliente

@{
    ViewData["Title"] = "Crear Cliente";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Crear Nuevo Cliente</h4>
    <hr />
    <form asp-action="Create" method="post">
        <div class="form-group row">
            <label asp-for="NombreCompleto" class="col-sm-2 col-form-label">Nombre Completo:</label>
            <div class="col-sm-10">
                <input asp-for="NombreCompleto" class="form-control" placeholder="Nombre Completo" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Identificacion" class="col-sm-2 col-form-label">Identificación:</label>
            <div class="col-sm-10">
                <input asp-for="Identificacion" class="form-control" placeholder="Identificación" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Direccion" class="col-sm-2 col-form-label">Dirección:</label>
            <div class="col-sm-10">
                <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Telefono" class="col-sm-2 col-form-label">Teléfono:</label>
            <div class="col-sm-10">
                <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Correo" class="col-sm-2 col-form-label">Correo:</label>
            <div class="col-sm-10">
                <input asp-for="Correo" class="form-control" placeholder="Correo" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <input type="submit" value="Crear Cliente" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </form>
</div>
